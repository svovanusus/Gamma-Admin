{
  "compilerOptions": {
    "baseUrl": "./src",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es6",
      "es2015.promise"
    ],
    "types": [ "node" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "typings/**/*.d.ts"]
}